{
    "compilerOptions": {
        "outDir": "build",
        "module": "esnext",
        "target": "es5",
        "declaration": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "__comment__": "to fix import issue in build process, add 'skipLibCheck', https://github.com/webpack/webpack/issues/12185",
        "skipLibCheck": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx",
    ]
}